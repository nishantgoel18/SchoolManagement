 

<h1>Schools</h1>

<div id="schools">
  <% @schools.each do |school| %>
    <%= render school %>
    <p>
      <%= link_to "Show this school", school if policy(:school).show? %>
    </p>
  <% end %>
</div>

<%= link_to 'Home', home_url %> <%= link_to "New school", new_school_path  if policy(:school).new? %>
